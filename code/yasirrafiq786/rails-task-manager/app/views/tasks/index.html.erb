<ul>
<% @tasks.each do |task| %>
  <li><%= link_to task.title, task_path(task) %> - <%= link_to '<i class="fas fa-trash"></i>'.html_safe, delete_task_path(task.id),
    method: :delete,
    data: {confirm: "Are you sure?"}%></li>
<% end %>
</ul>
